{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@elements/*": ["elements/*"],
      "@styles/*": ["styles/*"],
      "@data/*": ["util/data/*"],
      "@validations/*": ["util/validations/*"],
      "@assets/*": ["assets/*"],
      "@redux/*": ["redux/*"],
      "@types/*": ["util/types/*"],
      "@functions/*": ["util/functions/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
  "exclude": ["node_modules"]
}
